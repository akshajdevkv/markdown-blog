<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head> 
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-primary">New Article</a>
        <div class="mt-4">
            <% articles.forEach(article => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div class="text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div>
                        <div class="card-text"><%= article.description %></div>
                        <a href="articles/<%= article.id %>" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>